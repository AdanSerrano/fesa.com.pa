generator client {
  provider = "prisma-client"
  output   = "../app/prisma"
}

datasource db {
  provider = "mysql"
}

enum Role {
  USER
  ADMIN
}

model User {
  id                    String                 @id @default(cuid())
  userName              String?                @unique
  name                  String?
  email                 String?                @unique
  emailVerified         DateTime?
  image                 String?
  password              String?
  role                  Role                   @default(USER)
  isTwoFactorEnabled    Boolean                @default(false)
  failedLoginAttempts   Int                    @default(0)
  lockedUntil           DateTime?
  lastFailedLogin       DateTime?
  isBlocked             Boolean                @default(false)
  blockedAt             DateTime?
  blockedReason         String?
  blockedServices       Json                   @default("[]")
  deletedAt             DateTime?
  scheduledDeletionDate DateTime?
  deletionReason        String?
  createdAt             DateTime               @default(now())
  updatedAt             DateTime               @updatedAt
  twoFactorConfirmation twoFactorConfirmation?
  auditLogs             AuditLog[]
  sessions              Session[]
  files                 FileUpload[]
}

model VerificationToken {
  id      String   @id @default(cuid())
  email   String
  token   String   @unique
  expires DateTime

  @@unique([email, token])
}

model PasswordResetToken {
  id      String   @id @default(cuid())
  email   String
  token   String   @unique
  expires DateTime

  @@unique([email, token])
}

model TwoFactorToken {
  id      String   @id @default(cuid())
  email   String
  token   String   @unique
  expires DateTime

  @@unique([email, token])
}

model MagicLinkToken {
  id      String   @id @default(cuid())
  email   String
  token   String   @unique
  expires DateTime

  @@unique([email, token])
}

model twoFactorConfirmation {
  id     String @id @default(cuid())
  userId String
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId])
  @@index([userId])
}

enum AuditAction {
  LOGIN_SUCCESS
  LOGIN_FAILED
  LOGOUT
  PASSWORD_RESET_REQUESTED
  PASSWORD_RESET_COMPLETED
  EMAIL_VERIFIED
  TWO_FACTOR_ENABLED
  TWO_FACTOR_DISABLED
  TWO_FACTOR_VERIFIED
  ACCOUNT_LOCKED
  ACCOUNT_UNLOCKED
  REGISTRATION
  USER_BLOCKED
  USER_UNBLOCKED
  SERVICE_BLOCKED
  SERVICE_UNBLOCKED
  ACCOUNT_DELETION_REQUESTED
  ACCOUNT_DELETION_CANCELLED
  ACCOUNT_DELETED_PERMANENTLY
  MAGIC_LINK_REQUESTED
  MAGIC_LINK_LOGIN
}

model AuditLog {
  id        String      @id @default(cuid())
  userId    String?
  user      User?       @relation(fields: [userId], references: [id], onDelete: SetNull)
  action    AuditAction
  ipAddress String?
  userAgent String?
  metadata  Json?
  createdAt DateTime    @default(now())

  @@index([userId])
  @@index([action])
  @@index([createdAt])
}

model Session {
  id         String   @id @default(cuid())
  userId     String
  user       User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  token      String   @unique
  deviceType String?
  browser    String?
  os         String?
  ipAddress  String?
  lastActive DateTime @default(now())
  createdAt  DateTime @default(now())

  @@index([userId])
  @@index([token])
  @@index([lastActive])
}

model FileUpload {
  id            String           @id @default(cuid())
  userId        String
  user          User             @relation(fields: [userId], references: [id], onDelete: Cascade)

  fileName      String
  fileKey       String           @unique
  fileSize      Int
  mimeType      String
  fileExtension String

  visibility    String           @default("PRIVATE")
  category      String           @default("OTHER")
  status        String           @default("PENDING")

  publicUrl     String?

  deletedAt     DateTime?
  createdAt     DateTime         @default(now())
  updatedAt     DateTime         @updatedAt

  @@index([userId])
  @@index([visibility])
  @@index([status])
  @@index([category])
  @@index([createdAt])
}

model ServiceCategory {
  id          String        @id @default(cuid())
  name        String
  slug        String        @unique
  description String?       @db.Text
  image       String?
  isActive    Boolean       @default(true)
  isFeatured  Boolean       @default(false)
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt
  items       ServiceItem[]

  @@index([isActive])
  @@index([isFeatured])
  @@index([createdAt])
}

model ServiceItem {
  id          String           @id @default(cuid())
  categoryId  String?
  category    ServiceCategory? @relation(fields: [categoryId], references: [id], onDelete: SetNull)
  name        String
  slug        String           @unique
  description String?          @db.Text
  image       String?
  isActive    Boolean          @default(true)
  createdAt   DateTime         @default(now())
  updatedAt   DateTime         @updatedAt

  @@index([categoryId])
  @@index([isActive])
  @@index([createdAt])
}

model ProductCategory {
  id           String                       @id @default(cuid())
  image        String?
  isActive     Boolean                      @default(true)
  isFeatured   Boolean                      @default(false)
  createdAt    DateTime                     @default(now())
  updatedAt    DateTime                     @updatedAt
  items        ProductItem[]

  @@index([isActive])
  @@index([isFeatured])
  @@index([createdAt])
}


model ProductItem {
  id           String                   @id @default(cuid())
  categoryId   String
  category     ProductCategory          @relation(fields: [categoryId], references: [id], onDelete: Cascade)
  image        String?
  isActive     Boolean                  @default(true)
  price        Decimal?                 @db.Decimal(10, 2)
  sku          String?
  createdAt    DateTime                 @default(now())
  updatedAt    DateTime                 @updatedAt

  @@unique([sku])
  @@index([categoryId])
  @@index([isActive])
  @@index([createdAt])
}

model NewsCategory {
  id          String                    @id @default(cuid())
  image       String?
  icon        String?
  order       Int                       @default(0)
  isActive    Boolean                   @default(true)
  createdAt   DateTime                  @default(now())
  updatedAt   DateTime                  @updatedAt
  news        News[]

  @@index([isActive])
  @@index([order])
}


model NewsTag {
  id          String              @id @default(cuid())
  order       Int                 @default(0)
  isActive    Boolean             @default(true)
  createdAt   DateTime            @default(now())
  updatedAt   DateTime            @updatedAt
  news        NewsToTag[]

  @@index([isActive])
  @@index([order])
}

model News {
  id          String            @id @default(cuid())
  categoryId  String?
  category    NewsCategory?     @relation(fields: [categoryId], references: [id], onDelete: SetNull)
  image       String?
  publishedAt DateTime?
  isActive    Boolean           @default(false)
  isFeatured  Boolean           @default(false)
  viewCount   Int               @default(0)
  createdAt   DateTime          @default(now())
  updatedAt   DateTime          @updatedAt
  tags        NewsToTag[]

  @@index([categoryId])
  @@index([isActive])
  @@index([isFeatured])
  @@index([publishedAt])
  @@index([viewCount])
}

model NewsToTag {
  newsId String
  news   News   @relation(fields: [newsId], references: [id], onDelete: Cascade)
  tagId  String
  tag    NewsTag @relation(fields: [tagId], references: [id], onDelete: Cascade)

  @@id([newsId, tagId])
  @@index([newsId])
  @@index([tagId])
}

